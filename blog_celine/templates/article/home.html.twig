{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        {% for art in articles %}
            {% if art.isVisible %}
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12" style="margin-top: 10px;">
                    <div class="card">
                        <div class="card-header">
                            <img src="https://www.citationbonheur.fr/wp-content/uploads/2017/08/placeholder.png" class="card-img-top"/>
                        </div>
                        <div class="card-body">
                            <div class="card-title">{{ art.title }}</div>
                            <div class="card-text">{{ art.content }}</div>
                            <p>{{ art.author.lastname }} - {{ art.author.firstname }}</p>
                            <a href="/article/{{ art.id }}" class="btn btn-primary">Lire la suite</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>
{% endblock %}
