{% extends 'base.html.twig' %}

{% block title %} POUR LIRE LE DETAILS D'UN ARTICLE {% endblock %}

{% block body %}

<div class="container">
    <div class="show-header">
        <div class="headTitle">
            <div class="show-title">
                <h2>{{ article.title }}</h2>
            </div>
            <div class="show-details">
                <div class="show-author">
                    <p>{{ article.author.lastname }} {{ article.author.firstname }}</p>
                </div>
                <div class="show-date">
                    <p></p>
                </div>
            </div>
        </div>
    </div>
    <div class="">
        <div class="">
            <div class="card-text">{{ article.content }}</div>
        </div>
    </div>
</div>

{% endblock %}