{% extends 'base.html.twig' %}

{% block title %} Blog_celine - Contact {% endblock %}


{% block stylesheets %}
{{parent()}}
<style>
.contactForm {
    padding: 50px;
}
.row1, .row2, .row3 {
    margin: 10px 0;
}


</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="contactForm" id="contactForm">
        {{ form_start(form) }}
        <div class="row row1">
            <div class="col">{{ form_row(form.firstname) }}</div>
            <div class="col">{{ form_row(form.lastname) }}</div>
        </div>
        <div class="row row2">
            <div class="col">{{ form_row(form.phone) }}</div>
            <div class="col">{{ form_row(form.mail) }}</div>
        </div>
        <div class="row row3">
            {{ form_rest(form) }}
        </div>
        <div class="form-group" style="text-align: right;">
            <button class="btn btn-success">Envoyer</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}


{% block javascripts %}
{{parent()}}

<script>
$(document).ready(function() {
    $('#contact_firstname').addClass('form-control');
    $('#contact_lastname').addClass('form-control');
    $('#contact_phone').addClass('form-control');
    $('#contact_mail').addClass('form-control');
    $('#contact_message').addClass('form-control');
})
</script>

{% endblock %}